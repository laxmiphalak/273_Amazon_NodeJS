<html>
<head>
<title>Amazon Web Store</title>
<script src="/jquery-1.11.0.min.js"></script>
<script>
$( document ).ready(function() {
	$("#header").load("header.ejs");
	$("#menu").load("menu.html");				
});
</script>
</head>
<body>
<div id="header"></div><br />
<% if(session.name.length != 0){ %>
<h3>Welcome <%= session.name %>! </h3>
&nbsp;&nbsp;<a href="http://localhost:4242/logout"><h3>Logout</h3></a>
<% } else { %>
<a href="http://localhost:4242/login"><h3>Login</h3></a>
<% } %>

<h2 align="center">Thank you for shopping with us! </h2>

<div id="main">
<table width="90%">
<tr>
<td width="10%" valign="top">
<div id="menu" valign="top"></div>
</td>
<td>
<div id="content">
<h3 align="left">Order Details: </h3>
<% if(cart.length != 0){ %>
<h4 align="left">Items ordered:</h4>
<table align="left" width=100%>
<% cart.forEach(function(product){ %>
<tr>
<td align="left" width=80%>
 <h3><%= product.product_name %></h3>
 Cost: <%= product.product_cost %> $<br/>
</td>
</tr>
<% }) %>
</table>
<h4 align="left">Total cost:</h4> <%= total %>

<h4 align="left">Shipping Address:</h4>
<%= addr %>
<% } %>
</div>
</td>
</tr>
</table>
</div><br />
</body>
</html>